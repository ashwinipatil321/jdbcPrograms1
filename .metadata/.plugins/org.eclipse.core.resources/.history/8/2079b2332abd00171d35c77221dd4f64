package com.bridgelabz.jdbcPrograms.program;
import java.io.*;
import java.sql.*;

public class storeImage
{
	public static void main(String[] args) throws Exception {
		PreparedStatement pstmt=null;
		Connection con=null;
		
		try 
		{
			File f=new File("('/home/bridgeit/img.jpeg')");  
			FileReader fr=new FileReader(f); 
			Class.forName("com.mysql.jdbc.Driver");
			 con= DriverManager.getConnection("jdbc:mysql://localhost:3306", "root", "ninja");
            
			 pstmt=con.prepareStatement("insert into MySchema.ImageTable values(?,?)");
			 pstmt.setInt(1,123);
			 pstmt.setCharacterStream(2, fr, (int)f.length());
			 int count=pstmt.executeUpdate();
			System.out.println("stored succesfully....."+count);
			fr.close();
		} 
		catch (ClassNotFoundException | SQLException e)
		{
			e.printStackTrace();
		}
	}
}
